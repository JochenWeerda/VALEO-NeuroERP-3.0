{
  "name": "@valeo-neuroerp/purchase-domain",
  "version": "1.0.0",
  "description": "Purchase Domain for VALEO-NeuroERP 3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": ["erp", "purchase", "procurement", "domain"],
  "author": "VALEO-NeuroERP Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "fastify": "^4.24.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "peerDependencies": {
    "@valeo-neuroerp/shared": "workspace:*",
    "@valeo-neuroerp/utilities": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valeo-neuroerp/valeo-neuroerp-3.0.git",
    "directory": "packages/purchase-domain"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
