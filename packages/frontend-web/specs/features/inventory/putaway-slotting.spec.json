{
  "$schema": "https://raw.githubusercontent.com/github/spec-kit/main/schema/feature.schema.json",
  "name": "PutawaySlotting",
  "version": "1.0.0",
  "category": "inventory",
  "description": "AI-powered putaway and slotting optimization for maximum warehouse efficiency",

  "businessValue": {
    "problem": "Suboptimal slotting, inefficient putaway processes, poor space utilization",
    "solution": "AI-driven slotting optimization, automated putaway workflows, dynamic space management",
    "kpi": {
      "spaceUtilization": "+25% warehouse capacity",
      "putawayEfficiency": "+45% faster putaway",
      "pickingOptimization": "30% shorter picking routes"
    }
  },

  "components": [
    {
      "name": "SlottingDashboard",
      "type": "analytics",
      "description": "Visual warehouse slotting analysis and optimization dashboard",
      "props": {
        "warehouseLayout": "WarehouseLayout",
        "currentUtilization": "UtilizationData",
        "optimizationSuggestions": "SlottingSuggestion[]"
      },
      "visualizations": {
        "heatMap": true,
        "utilizationChart": true,
        "efficiencyMetrics": true,
        "abcAnalysis": true
      }
    },
    {
      "name": "PutawayWorkstation",
      "type": "workspace",
      "description": "Guided putaway interface with AI slot recommendations",
      "props": {
        "inboundItems": "InboundItem[]",
        "recommendedSlots": "SlotRecommendation[]",
        "onSlotConfirmed": "(item: InboundItem, slot: Slot) => void"
      },
      "behaviors": {
        "aiSlotting": true,
        "voiceGuidance": true,
        "batchProcessing": true,
        "conflictResolution": true
      }
    },
    {
      "name": "SlottingCopilot",
      "type": "copilot",
      "description": "AI assistant for slotting optimization and analysis",
      "mcpTool": "inventory.optimizeSlotting",
      "triggers": ["item.received", "utilization.threshold", "re-slotting.analysis"],
      "capabilities": {
        "abcAnalysis": true,
        "velocityOptimization": true,
        "spaceUtilization": true,
        "seasonalPlanning": true,
        "reSlotting": true
      }
    }
  ],

  "workflows": [
    {
      "name": "InboundPutawayFlow",
      "steps": [
        "itemReceipt",
        "aiSlotRecommendation",
        "putawayExecution",
        "verification",
        "inventoryUpdate"
      ],
      "estimatedTime": "5-8 minutes per item",
      "automationLevel": "90%"
    },
    {
      "name": "ReSlottingOptimization",
      "steps": [
        "utilizationAnalysis",
        "velocityAssessment",
        "reSlottingPlan",
        "executionScheduling",
        "performanceMonitoring"
      ],
      "estimatedTime": "2-4 hours",
      "automationLevel": "95%"
    }
  ],

  "dataModels": {
    "SlotRecommendation": {
      "itemId": "ItemId",
      "recommendedSlot": "Slot",
      "confidence": "number",
      "reasoning": "string[]",
      "expectedImprovement": {
        "pickingEfficiency": "number",
        "spaceUtilization": "number",
        "accessibility": "number"
      }
    },
    "WarehouseLayout": {
      "zones": "Zone[]",
      "slots": "Slot[]",
      "aisles": "Aisle[]",
      "constraints": "LayoutConstraint[]"
    }
  },

  "integrations": {
    "mcpTools": [
      {
        "name": "inventory.optimizeSlotting",
        "description": "AI-powered slotting optimization",
        "parameters": {
          "item": "InboundItem",
          "warehouse": "WarehouseLayout",
          "constraints": "SlottingConstraints"
        },
        "returns": "SlotRecommendation[]"
      },
      {
        "name": "inventory.analyzeUtilization",
        "description": "Warehouse utilization analysis and optimization",
        "parameters": {
          "warehouse": "WarehouseLayout",
          "timeframe": "AnalysisTimeframe"
        },
        "returns": "UtilizationAnalysis"
      },
      {
        "name": "inventory.predictDemand",
        "description": "Demand forecasting for slotting optimization",
        "parameters": {
          "itemId": "ItemId",
          "historicalData": "DemandHistory"
        },
        "returns": "DemandPrediction"
      }
    ]
  },

  "algorithms": {
    "slottingStrategies": [
      {
        "name": "velocityBased",
        "description": "Slot high-velocity items in optimal picking locations",
        "algorithm": "velocity * accessibility * (1 - distance_penalty)"
      },
      {
        "name": "abcClassification",
        "description": "ABC analysis based slotting optimization",
        "algorithm": "value * frequency * accessibility_score"
      },
      {
        "name": "familyGrouping",
        "description": "Group related items for efficient picking",
        "algorithm": "similarity_score * co-occurrence_factor"
      }
    ]
  },

  "qualityGates": {
    "optimizationAccuracy": "> 85% recommendation acceptance",
    "spaceUtilization": "> 85% warehouse capacity utilization",
    "pickingEfficiency": "< 100m average picking distance",
    "reSlottingFrequency": "quarterly optimization cycles"
  },

  "responsive": {
    "desktop": {
      "layout": "multi-panel-analysis",
      "visualizations": "full-heatmap",
      "controls": "advanced-filtering"
    },
    "tablet": {
      "layout": "single-panel-focus",
      "visualizations": "simplified-charts",
      "controls": "touch-optimized"
    },
    "mobile": {
      "layout": "list-based",
      "visualizations": "key-metrics-only",
      "controls": "voice-first"
    }
  },

  "realTime": {
    "updates": {
      "slotAvailability": "immediate",
      "utilizationMetrics": "5-minute intervals",
      "optimizationSuggestions": "real-time"
    },
    "notifications": {
      "lowUtilization": "threshold-based",
      "slotConflicts": "immediate",
      "optimizationOpportunities": "scheduled"
    }
  }
}