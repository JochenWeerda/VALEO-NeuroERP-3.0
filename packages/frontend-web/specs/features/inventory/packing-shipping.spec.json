{
  "$schema": "https://raw.githubusercontent.com/github/spec-kit/main/schema/feature.schema.json",
  "name": "PackingShipping",
  "version": "1.0.0",
  "category": "inventory",
  "description": "Enterprise-grade packing and shipping management with AI optimization",

  "businessValue": {
    "problem": "Inefficient packing processes, shipping errors, and lack of optimization",
    "solution": "AI-powered packing optimization, automated shipping workflows, and real-time tracking",
    "kpi": {
      "packingEfficiency": "+40% faster packing",
      "shippingAccuracy": "99.5% error reduction",
      "costSavings": "â‚¬50K annual savings"
    }
  },

  "components": [
    {
      "name": "PackingStation",
      "type": "workspace",
      "description": "Main packing station interface with AI assistance",
      "props": {
        "orderId": "OrderId",
        "items": "OrderItem[]",
        "packingInstructions": "PackingRule[]",
        "onComplete": "(packedOrder: PackedOrder) => void"
      },
      "behaviors": {
        "aiOptimization": true,
        "voiceGuidance": true,
        "realTimeValidation": true
      },
      "accessibility": {
        "keyboardNavigation": true,
        "screenReader": true,
        "highContrast": true
      }
    },
    {
      "name": "ShippingLabelGenerator",
      "type": "utility",
      "description": "Automated shipping label generation with carrier integration",
      "props": {
        "shipment": "Shipment",
        "carrier": "Carrier",
        "format": "'pdf' | 'zpl' | 'image'"
      },
      "integrations": {
        "dhl": true,
        "dpd": true,
        "ups": true,
        "customCarrier": true
      }
    },
    {
      "name": "PackingOptimizationPanel",
      "type": "copilot",
      "description": "AI Copilot for packing optimization recommendations",
      "mcpTool": "inventory.optimizePacking",
      "triggers": ["packing.start", "item.added", "space.low"],
      "capabilities": {
        "spaceOptimization": true,
        "fragileItemHandling": true,
        "weightDistribution": true,
        "costOptimization": true
      }
    }
  ],

  "workflows": [
    {
      "name": "StandardPackingFlow",
      "steps": [
        "orderSelection",
        "itemVerification",
        "packingOptimization",
        "labelGeneration",
        "qualityCheck",
        "shippingConfirmation"
      ],
      "estimatedTime": "8-12 minutes",
      "automationLevel": "80%"
    },
    {
      "name": "BulkPackingFlow",
      "steps": [
        "batchOrderSelection",
        "automatedSorting",
        "consolidationOptimization",
        "bulkLabeling",
        "finalVerification"
      ],
      "estimatedTime": "15-25 minutes",
      "automationLevel": "90%"
    }
  ],

  "dataModels": {
    "PackingRule": {
      "id": "string",
      "name": "string",
      "conditions": "PackingCondition[]",
      "actions": "PackingAction[]",
      "priority": "number"
    },
    "PackedOrder": {
      "orderId": "OrderId",
      "packages": "Package[]",
      "totalWeight": "number",
      "totalVolume": "number",
      "shippingMethod": "ShippingMethod",
      "packedAt": "Date",
      "packedBy": "UserId"
    }
  },

  "integrations": {
    "mcpTools": [
      {
        "name": "inventory.optimizePacking",
        "description": "AI-powered packing optimization",
        "parameters": {
          "items": "OrderItem[]",
          "constraints": "PackingConstraints"
        },
        "returns": "PackingRecommendation"
      },
      {
        "name": "shipping.calculateRates",
        "description": "Real-time shipping cost calculation",
        "parameters": {
          "packages": "Package[]",
          "destination": "Address"
        },
        "returns": "ShippingRate[]"
      }
    ],
    "externalSystems": [
      "carrierApis",
      "trackingSystems",
      "customsDeclaration",
      "insuranceProviders"
    ]
  },

  "qualityGates": {
    "accessibility": "WCAG 2.1 AA",
    "performance": "< 2s load time",
    "accuracy": "> 99.5% packing accuracy",
    "efficiency": "< 10 min per standard order"
  },

  "responsive": {
    "mobile": {
      "layout": "single-column",
      "touchTargets": "44px minimum",
      "gestures": ["swipe", "tap", "long-press"]
    },
    "tablet": {
      "layout": "two-column",
      "orientation": "landscape-preferred",
      "input": "stylus-support"
    },
    "desktop": {
      "layout": "multi-panel",
      "shortcuts": "keyboard-optimized",
      "multitasking": "multiple-orders"
    }
  },

  "offline": {
    "capabilities": "full",
    "syncStrategy": "queue-based",
    "conflictResolution": "user-guided",
    "dataRetention": "30 days"
  },

  "testing": {
    "unitTests": "component-level",
    "integrationTests": "workflow-level",
    "e2eTests": "user-journey",
    "performanceTests": "load-testing",
    "accessibilityTests": "automated"
  },

  "metadata": {
    "author": "VALEO NeuroERP Team",
    "created": "2025-10-08",
    "inspiredBy": ["SAP EWM", "Oracle WMS", "Manhattan SCALE"],
    "marketAlignment": "SAP Fiori + Oracle Redwood standards",
    "aiIntegration": "MCP-based Copilot assistance",
    "tags": ["packing", "shipping", "optimization", "ai", "enterprise"]
  }
}