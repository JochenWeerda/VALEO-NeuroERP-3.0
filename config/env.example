# ===========================================
# VALEO NeuroERP Environment Variables
# ===========================================
# Kopieren Sie diese Datei nach .env im Root-Verzeichnis und passen Sie die Werte an.
# cp config/env.example .env

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=valeo_dev
POSTGRES_PASSWORD=valeo_dev_2024
POSTGRES_DB=valeo_neuro_erp

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=

# ===========================================
# Keycloak Identity Provider
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123!

# ===========================================
# AI Service
# ===========================================
OPENAI_API_KEY=

# ===========================================
# Social Media / External APIs (optional)
# ===========================================
FACEBOOK_APP_ID=
TWITTER_API_KEY=
SHOPIFY_API_KEY=

# ===========================================
# DMS (Document Management System)
# Paperless-ngx Integration
# ===========================================

# Paperless-ngx Database
PAPERLESS_DB_PASSWORD=paperless_dev_2024

# Paperless-ngx Security
# WICHTIG: In Produktion durch sichere Werte ersetzen!
PAPERLESS_SECRET_KEY=change-me-in-production-32-chars-minimum
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=admin123!

# Paperless-ngx API Token
# Wird nach dem ersten Start in Paperless generiert:
# 1. Paperless starten: docker-compose up paperless -d
# 2. Einloggen unter http://localhost:8001
# 3. Unter Settings > API > Create Token
# 4. Token hier eintragen und DMS-Adapter neu starten
PAPERLESS_API_TOKEN=

# ===========================================
# JWT / Security
# ===========================================
# WICHTIG: In Produktion durch sichere Werte ersetzen!
JWT_SECRET=dev-jwt-secret-change-in-production

# ===========================================
# Entwicklung
# ===========================================
DEBUG=true
LOG_LEVEL=INFO

