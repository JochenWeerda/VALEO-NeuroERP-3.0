{
  "$schema": "https://valeo-neuroerp.com/schemas/mask-builder/v3.1.0",
  "meta": {
    "name": "kunden_ansprechpartner",
    "description": "Ansprechpartner für Kundenstamm",
    "version": "3.1.0",
    "author": "VALEO-NeuroERP Team",
    "created": "2025-10-26",
    "lastModified": "2025-10-26"
  },
  "resource": "kunden_ansprechpartner",
  "i18n": "de-DE",
  "routing": {
    "basePath": "/verkauf/kunden-stamm/kunden_ansprechpartner",
    "param": "id",
    "listPath": "/{{MODULE}}/{{RESOURCE}}-liste"
  },
  "ui": {
    "responsive": true,
    "breakpoints": {
      "sm": {
        "columns": 1,
        "nav": "bottom",
        "useAccordions": true,
        "stickyFooterActions": true,
        "showQuickActions": true
      },
      "md": {
        "columns": 2,
        "nav": "side",
        "useAccordions": false,
        "stickyFooterActions": true,
        "showQuickActions": true
      },
      "lg": {
        "columns": 3,
        "nav": "side",
        "useAccordions": false,
        "stickyFooterActions": false,
        "showQuickActions": false
      }
    },
    "touch": {
      "minTargetSizePx": 44,
      "swipeActions": true,
      "hapticFeedback": true
    },
    "performance": {
      "virtualLists": true,
      "deferHeavyPanels": true,
      "lazyLoadImages": true
    },
    "accessibility": {
      "ariaLabels": true,
      "keyboardShortcuts": true,
      "focusManagement": true,
      "reducedMotion": true
    }
  },
  "ai": {
    "enabled": true,
    "intentBar": {
      "shortcut": "Mod+k",
      "placeholder": "Befehl oder Frage eingeben...",
      "actions": []
    },
    "validators": [],
    "ragPanels": {},
    "mcp": {
      "tools": []
    },
    "telemetry": {
      "formFriction": true,
      "autoFix": true,
      "usageAnalytics": true
    }
  },
  "layout": {
    "header": {
      "sticky": true,
      "primary": [],
      "secondary": [],
      "actions": [
        {
          "id": "save",
          "label": "Speichern",
          "type": "primary",
          "icon": "Save",
          "shortcut": "Mod+s"
        },
        {
          "id": "new",
          "label": "Neu",
          "type": "default",
          "icon": "Plus",
          "shortcut": "Mod+n"
        },
        {
          "id": "duplicate",
          "label": "Duplizieren",
          "type": "default",
          "icon": "Copy",
          "shortcut": "Mod+d"
        },
        {
          "id": "more",
          "label": "Weitere",
          "type": "menu",
          "icon": "MoreVertical",
          "items": [
            "archive",
            "delete",
            "export",
            "history",
            "print"
          ]
        }
      ]
    },
    "nav": [
      {
        "id": "main",
        "label": "Ansprechpartner",
        "icon": "FileText"
      }
    ],
    "footer": {
      "show": true,
      "showInfo": true,
      "showValidationErrors": true
    }
  },
  "views": [
    {
      "id": "main",
      "label": "Ansprechpartner",
      "sections": [
        {
          "title": "Ansprechpartner",
          "grid": 3,
          "fields": [
            {
              "comp": "String",
              "bind": "vorname",
              "label": "Vorname"
            },
            {
              "comp": "String",
              "bind": "nachname",
              "label": "Nachname"
            },
            {
              "comp": "String",
              "bind": "position",
              "label": "Position"
            },
            {
              "comp": "String",
              "bind": "abteilung",
              "label": "Abteilung"
            },
            {
              "comp": "String",
              "bind": "telefon1",
              "label": "Telefon 1"
            },
            {
              "comp": "String",
              "bind": "telefon2",
              "label": "Telefon 2"
            },
            {
              "comp": "String",
              "bind": "mobil",
              "label": "Mobil"
            },
            {
              "comp": "Email",
              "bind": "email",
              "label": "E-Mail"
            },
            {
              "comp": "String",
              "bind": "strasse",
              "label": "Straße"
            },
            {
              "comp": "String",
              "bind": "plz",
              "label": "PLZ"
            },
            {
              "comp": "String",
              "bind": "ort",
              "label": "Ort"
            },
            {
              "comp": "String",
              "bind": "anrede",
              "label": "Anrede"
            },
            {
              "comp": "String",
              "bind": "briefanrede",
              "label": "Briefanrede"
            },
            {
              "comp": "Date",
              "bind": "geburtsdatum",
              "label": "Geburtsdatum"
            },
            {
              "comp": "Text",
              "bind": "hobbys",
              "label": "Hobbys"
            },
            {
              "comp": "Text",
              "bind": "info1",
              "label": "Info 1"
            },
            {
              "comp": "Text",
              "bind": "info2",
              "label": "Info 2"
            },
            {
              "comp": "Boolean",
              "bind": "empfanger_rechnung_email",
              "label": "Rechnung per Mail"
            },
            {
              "comp": "Boolean",
              "bind": "empfanger_mahnung_email",
              "label": "Mahnung per Mail"
            },
            {
              "comp": "String",
              "bind": "kontaktart",
              "label": "Kontaktart"
            },
            {
              "comp": "Date",
              "bind": "erstanlage",
              "label": "Erstanlage"
            },
            {
              "comp": "String",
              "bind": "cad_system",
              "label": "CAD-System"
            },
            {
              "comp": "String",
              "bind": "softwaresysteme",
              "label": "Softwaresysteme"
            },
            {
              "comp": "Boolean",
              "bind": "datenschutzbeauftragter",
              "label": "Datenschutzbeauftragter"
            }
          ]
        }
      ]
    }
  ],
  "subtables": {},
  "validation": {
    "rules": {},
    "messages": {
      "required": "Dieses Feld ist erforderlich",
      "pattern": "Ungültiges Format",
      "min": "Wert zu niedrig",
      "max": "Wert zu hoch"
    }
  },
  "behavior": {
    "autoSave": false,
    "draftMode": true,
    "confirmDelete": true,
    "confirmNavigation": true,
    "showChangesSummary": true
  }
}